{
  "name": "PlannerTool",
  "version": "1.0.0",
  "description": "Azure DevOps Planner UI and backend integration",
  "type": "module",
  "main": "planner.py",
  "scripts": {
    "test": "npm run test:unit",
    "test:watch": "web-test-runner --config web-test-runner.config.mjs --watch",
    "test:coverage": "web-test-runner --config web-test-runner.config.mjs --coverage",
    "test:unit": "web-test-runner \"tests/services/**/*.test.js\" \"tests/core/**/*.test.js\" \"tests/helpers/**/*.test.js\" --node --quiet",
    "test:browser": "web-test-runner --config web-test-runner.config.mjs --browsers playwright:chromium",
    "test:node": "web-test-runner --config web-test-runner.config.mjs --node --quiet",
    "test-js": "npx c8 node scripts/run_js_tests.mjs",
    "test:e2e": "npx playwright test --config=tests/playwright.config.js --project=firefox"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@open-wc/testing": "^4.0.0",
    "@web/test-runner": "^0.20.2",
    "@web/test-runner-playwright": "^0.11.1",
    "@playwright/test": "^1.42.0",
    "c8": "^10.1.3",
    "chai": "^6.2.1",
    "sinon": "^21.0.1"
  },
  "dependencies": {
    "lit": "^3.3.1"
  }
}
